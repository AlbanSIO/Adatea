<Window x:Class="Adatea.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Connexion" FontSize="24" HorizontalAlignment="Center" Margin="0 20"/>

        <StackPanel Grid.Row="1" Margin="40 10">
            <Label Content="Nom d'utilisateur:"/>
            <TextBox x:Name="TxtUsername" Margin="0 5"/>

            <Label Content="Mot de passe:" Margin="0 10"/>
            <PasswordBox x:Name="TxtPassword" Margin="0 5"/>
        </StackPanel>

        <Button x:Name="BtnLogin" Content="Connexion" Grid.Row="2" Width="100" HorizontalAlignment="Center" Margin="0 20"/>
    </Grid>
</Window>
